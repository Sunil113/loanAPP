<h1>Admins</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Wallet Balance</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td><%= number_to_currency(admin.wallet_balance) %></td>
        <td><%= link_to 'View', admin_path(admin) %></td>
      </tr>
    <% end %>
  </tbody>
</table>